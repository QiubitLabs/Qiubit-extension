{
    "manifest_version": 3,
    "name": "Qiubit",
    "short_name": "Qiubit",
    "version": "1.0.2",
    "description": "Secure non-custodial wallet for Octra Network. Manage assets, send transactions, and connect to dApps.",
    "author": "Qiubit Dev",
    "minimum_chrome_version": "88",
    "permissions": [
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://octra.network/*",
        "https://*.octra.network/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Qiubit",
        "default_icon": "icons/icon-48.png"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'self';"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "inpage.js",
                "assets/*",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}